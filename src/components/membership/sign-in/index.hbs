<aside id="signInForm" class="sign-in">

  <p>
    <a id="backToSignup" href="#">
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
      {{t "BCK-TO-SIGNUP"}}
    </a>
  </p>

  <form>
    <h4>{{t "SIGN-IN"}}</h4>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="signInEmail" class="control-label">{{t "EMAIL-ADDRESS"}}
            <small>{{t "REQUIRED"}}</small>
          </label>
          <input
            class="form-control"
            id="signInEmail"
            name="email"
            type="email"
            value="{{Customer.Email}}"
            pattern="[^@\s]+@[^@\s]+\.[^@\s]+"
            required
          />
        </div>

        <div class="form-group">
          <label for="password" class="control-label">
            {{t "PASSWORD"}}
            <small>{{t "REQUIRED"}}</small>
          </label>
          <input
            class="form-control"
            id="password"
            name="password"
            type="password"
            minlength="6"
            required
          />
        </div>
      </div>
    </div>

    <button class="btn btn-success" type="submit" href="#">
      {{t "SIGN-IN"}}
    </button>

    <a href="{{signupEnv}}/forgotpassword.jsp" target="_blank">
      {{t "FORGOT-PASSWORD"}}
    </a>
  </form>

</aside>

{{! <div id="signInAlert" class="alert hidden"></div> }}

