<div
  id="popup"
  class="modal fade"
  tabindex="-1"
  role="dialog"
  aria-labelledby="popupLabel"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-hidden="true"
        >&times;</button>

        <h3 id="header-content">
          {{t "UPDATE-BILLING-INFORMATION"}}
        </h3>
      </div>

      <div class="modal-body">
        <h4 id="body-content"></h4>
      </div>

      <div class="modal-footer">
        <button
          class="btn btn-primary btn-confirmation"
          data-dismiss="modal"
        >{{t "OKAY"}}</button>
      </div>

    </div>
  </div>
</div>